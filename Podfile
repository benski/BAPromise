use_frameworks!

target 'iOS' do
  platform :ios, '8.0'
  pod "BAPromise"  , :path => "."
  target 'iOSTests' do
	pod "OCMock"
  end
end

target 'OS X' do
 platform :osx, '10.10'
 target 'OS XTests' do
 	pod "OCMock"
 end
end

target 'tvOS' do
 platform :tvos, '9.0'
 target 'tvOSTests' do
 	pod "OCMock"
 end
end
